<%- include("partials/header") -%>
<%- include("partials/navbar") -%> 
<body class="text-center">
  <%- include("partials/message") -%> 
  <div class="form-signin" >
    <div class="card">
      <form action="/" method="post">
        <div class="card-header">
          <h1 class="h3 card-title">Welcome to Not-StackOverflow!</h1>
        </div>
        <div class="card-body">
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              placeholder="Username"
              autofocus
              required
            />
            <label for="username">Username</label>
          </div>
          <div class="form-floating">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
            <label for="password">Password</label>
          </div>
          <div class="row mt-3">
            <div class="col">
              <button class="btn btn-secondary w-100" type="submit">Log In</button>
            </div>
            <div class="col">
              <a href="/signup" class="btn btn-dark w-100">Sign Up</a>
            </div>
          </div>
          <a href="/home" class="mt-3 btn btn-outline-dark w-100">Log In as Guest</a>
        </div>
        </form>
        </div>
    </div>
    
  </div>

  <%- include("partials/footer") -%>
